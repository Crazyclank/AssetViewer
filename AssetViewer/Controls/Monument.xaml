<UserControl x:Class="AssetViewer.Controls.Monument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetViewer.Controls"
             xmlns:converter="clr-namespace:AssetViewer.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White" Loaded="Monument_OnLoaded">

  <UserControl.Resources>
    <!--<BooleanToVisibilityConverter x:Key="BooleanToVisibility"></BooleanToVisibilityConverter>-->
    <converter:DescriptionConverter x:Key="DescriptionConverter"></converter:DescriptionConverter>
    <DataTemplate x:Key="SelectableTemplate">
      <Grid MaxHeight="30">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30"></ColumnDefinition>
          <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="{Binding Path=Icon}" HorizontalAlignment="Left"></Image>
        <TextBlock Grid.Column="1" Text="{Binding Path=Value, Converter={StaticResource DescriptionConverter}}" VerticalAlignment="Center"></TextBlock>
      </Grid>
    </DataTemplate>
  </UserControl.Resources>

  <Grid Grid.Row="2">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="10"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <GroupBox Grid.Row="0" Header="Filter">
      <StackPanel Orientation="Horizontal" Margin="5">
        <Grid Margin="0,0,50,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
          </Grid.RowDefinitions>
          <ComboBox x:Name="ComboBoxCategories" Grid.Column="0" Grid.Row="0" Height="22" ItemsSource="{Binding Path=Categories}" ItemTemplate="{StaticResource SelectableTemplate}" SelectionChanged="ComboBoxCategories_OnSelectionChanged"></ComboBox>
          <ComboBox x:Name="ComboBoxEvents" Grid.Column="0" Grid.Row="1" Height="22" ItemsSource="{Binding Path=Events}" ItemTemplate="{StaticResource SelectableTemplate}" SelectionChanged="ComboBoxEvents_OnSelectionChanged"></ComboBox>
          <ComboBox x:Name="ComboBoxThresholds" Grid.Column="0" Grid.Row="2" Height="22" ItemsSource="{Binding Path=Thresholds}" ItemTemplate="{StaticResource SelectableTemplate}" SelectionChanged="ComboBoxThresholds_OnSelectionChanged"></ComboBox>
        </Grid>
      </StackPanel>
    </GroupBox>
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="10"></ColumnDefinition>
        <ColumnDefinition Width="350"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="0">
        <ListBox x:Name="ListBoxItems" ItemsSource="{Binding Path=Rewards}" SelectionChanged="ListBoxItems_OnSelectionChanged">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Grid MaxHeight="24">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="30"></ColumnDefinition>
                  <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="{Binding Path=Icon}" HorizontalAlignment="Left"></Image>
                <TextBlock Grid.Column="1" Text="{Binding Path=Value, Converter={StaticResource DescriptionConverter}}" VerticalAlignment="Center"></TextBlock>
              </Grid>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </Grid>
      <Border Grid.Column="2" BorderThickness="0" BorderBrush="#FFABADB3">
        <ContentPresenter x:Name="Presenter" HorizontalAlignment="Left"/>
      </Border>
    </Grid>
  </Grid>


</UserControl>
