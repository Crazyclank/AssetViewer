<UserControl x:Class="AssetViewer.Controls.GuildhouseItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetViewer.Controls"
             xmlns:assetViewer="clr-namespace:AssetViewer"
             xmlns:converter="clr-namespace:AssetViewer.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" SnapsToDevicePixels="True"
             FontSize="13" Loaded="GuildhouseItem_OnLoaded">

  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibility"></BooleanToVisibilityConverter>
    <converter:GlobalDescriptionConverter x:Key="Description"></converter:GlobalDescriptionConverter>
    <converter:DescriptionConverter x:Key="DescriptionConverter"></converter:DescriptionConverter>
    <converter:VisibilityConverter x:Key="VisibilityConverter"></converter:VisibilityConverter>
    <DataTemplate x:Key="UpgradeTemplate">
      <Grid SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30"></ColumnDefinition>
          <ColumnDefinition Width="*"></ColumnDefinition>
          <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="22"></RowDefinition>
          <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Source="{Binding Path=Icon.Filename}" Height="18" Width="18" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
        <TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=Text, Converter={StaticResource DescriptionConverter}}"></TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=Value}"></TextBlock>
        <ItemsControl Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" ItemsSource="{Binding Path=Additionals}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="30"></ColumnDefinition>
                  <ColumnDefinition Width="*"></ColumnDefinition>
                  <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="{Binding Path=Icon.Filename}" Height="18" Width="18" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding Path=Text, Converter={StaticResource DescriptionConverter}}" Foreground="#FFA49370" TextWrapping="Wrap"></TextBlock>
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=Value}" Foreground="#FFA49370"></TextBlock>
              </Grid>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Grid>
    </DataTemplate>
    <ControlTemplate x:Key="ButtonSwitchTemplate" TargetType="{x:Type Button}">
      <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
        <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
      </Border>
    </ControlTemplate>
  </UserControl.Resources>

  <Grid Grid.Row="2">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="10"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <Border Grid.Row="0" BorderBrush="#FF554628" BorderThickness="1" CornerRadius="5">
      <Grid Margin="5">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="200"></ColumnDefinition>
          <ColumnDefinition Width="5"></ColumnDefinition>
          <ColumnDefinition Width="200"></ColumnDefinition>
          <ColumnDefinition Width="5"></ColumnDefinition>
          <ColumnDefinition Width="200"></ColumnDefinition>
          <ColumnDefinition Width="5" />
          <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="18"></RowDefinition>
          <RowDefinition Height="22"></RowDefinition>
          <RowDefinition Height="18"></RowDefinition>
          <RowDefinition Height="22"></RowDefinition>
          <RowDefinition Height="18"/>
          <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=Rarities, Converter={StaticResource Description}, ConverterParameter=1001}" Margin="0,0,5,0"></TextBlock>
        <ComboBox x:Name="ComboBoxRarities" Grid.Column="0" Grid.Row="1" Height="22" ItemsSource="{Binding Path=Rarities}" SelectionChanged="ComboBoxRarities_OnSelectionChanged"></ComboBox>
        <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Text="{Binding Path=Rarities, Converter={StaticResource Description}, ConverterParameter=1004}" Margin="0,0,5,0"></TextBlock>
        <TextBox Grid.Column="0" Grid.Row="3" Text="{Binding Path=SearchText, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=ItemTypes, Converter={StaticResource Description}, ConverterParameter=1002}" Margin="0,0,5,0"></TextBlock>
        <ComboBox x:Name="ComboBoxTypes" Grid.Column="2" Grid.Row="1" Height="22" ItemsSource="{Binding Path=ItemTypes}" SelectionChanged="ComboBoxTypes_OnSelectionChanged" Margin="0"></ComboBox>
        <TextBlock Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Center" Text="{Binding Path=Targets, Converter={StaticResource Description}, ConverterParameter=1003}" Margin="0,0,5,0"></TextBlock>
        <ComboBox x:Name="ComboBoxTargets" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="3" Height="22" ItemsSource="{Binding Path=Targets}" SelectionChanged="ComboBoxTargets_OnSelectionChanged"></ComboBox>

        <TextBlock Grid.Column="4" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=ItemTypes, Converter={StaticResource Description}, ConverterParameter=106}" Margin="0,0,5,0"></TextBlock>
        <ComboBox x:Name="ComboBoxEquipped" Grid.Column="4" Grid.Row="1" Height="22" ItemsSource="{Binding Path=Equipped}" SelectionChanged="ComboBoxEquipped_OnSelectionChanged" Margin="0"></ComboBox>

        <TextBlock Grid.Row="0" Grid.Column="6" Margin="0,0,5,0" VerticalAlignment="Center" Text="{Binding Path=Sources, Converter={StaticResource Description}, ConverterParameter=1005}" />
        <ComboBox x:Name="ComboBoxSources" Grid.Row="1" Grid.Column="6" Height="22" ItemsSource="{Binding Path=Sources}" SelectionChanged="ComboBoxRarities_OnSelectionChanged" />
        
        <TextBlock Grid.Row="2" Grid.Column="6" Margin="0,0,5,0" VerticalAlignment="Center" Text="{Binding Path=Upgrades, Converter={StaticResource Description}, ConverterParameter=1006}" />
        <ComboBox x:Name="ComboBoxUpgrades" Grid.Row="3" Grid.Column="6" Height="22" ItemsSource="{Binding Path=Upgrades}" SelectionChanged="ComboBoxRarities_OnSelectionChanged" />

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,5,0" VerticalAlignment="Center" Text="{Binding Path=ReleaseVersions, Converter={StaticResource Description}, ConverterParameter=1007}" />
        <ComboBox x:Name="ComboBoxReleases" Grid.Row="5" Grid.Column="0" Height="22" ItemsSource="{Binding Path=ReleaseVersions}" SelectionChanged="ComboBoxRarities_OnSelectionChanged" />
        
      </Grid>
    </Border>
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="10"></ColumnDefinition>
        <ColumnDefinition Width="350"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="0">
        <Border BorderBrush="#FF554628" BorderThickness="1" CornerRadius="5">
          <ListBox x:Name="ListBoxItems" Background="Transparent" ItemsSource="{Binding Path=Items}" 
                 SelectedItem="{Binding Path=SelectedAsset}" SelectionChanged="ListBoxItems_OnSelectionChanged" 
                 BorderBrush="Transparent" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Grid MaxHeight="24">
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                  </Grid.ColumnDefinitions>
                  <Image Grid.Column="0" Source="{Binding Path=Icon.Filename}" HorizontalAlignment="Left"></Image>
                  <TextBlock Grid.Column="1" Text="{Binding Path=Text, Converter={StaticResource DescriptionConverter}}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"></TextBlock>
                  <TextBlock Grid.Column="2" Text="{Binding Path=Text.ID}" VerticalAlignment="Center" FontSize="11" HorizontalAlignment="Right"></TextBlock>
                </Grid>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </Border>
      </Grid>
      <local:ItemCard Grid.Column="2" CanSwap="True" SelectedAsset="{Binding SelectedAsset}" />
    </Grid>
  </Grid>

</UserControl>
