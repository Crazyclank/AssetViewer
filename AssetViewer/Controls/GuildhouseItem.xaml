<UserControl x:Class="AssetViewer.Controls.GuildhouseItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetViewer.Controls"
             xmlns:assetViewer="clr-namespace:AssetViewer"
             xmlns:converter="clr-namespace:AssetViewer.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FFECD5A9" FontSize="13" Loaded="GuildhouseItem_OnLoaded">

  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibility"></BooleanToVisibilityConverter>
    <converter:GlobalDescriptionConverter x:Key="Description"></converter:GlobalDescriptionConverter>
    <converter:DescriptionConverter x:Key="DescriptionConverter"></converter:DescriptionConverter>
    <converter:VisibilityConverter x:Key="VisibilityConverter"></converter:VisibilityConverter>
    <DataTemplate x:Key="UpgradeTemplate">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30"></ColumnDefinition>
          <ColumnDefinition Width="*"></ColumnDefinition>
          <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="22"></RowDefinition>
          <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Source="{Binding Path=Icon.Filename}" Height="22" Width="22" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
        <TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=Text, Converter={StaticResource DescriptionConverter}}" Foreground="#FFFFE4AD"></TextBlock>
        <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=Value}" Foreground="#FFFFE4AD"></TextBlock>
        <ItemsControl Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" ItemsSource="{Binding Path=Additionals}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="30"></ColumnDefinition>
                  <ColumnDefinition Width="*"></ColumnDefinition>
                  <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="{Binding Path=Icon.Filename}" Height="22" Width="22" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding Path=Text, Converter={StaticResource DescriptionConverter}}" Foreground="#FFA49370"></TextBlock>
                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=Value}" Foreground="#FFA49370"></TextBlock>
              </Grid>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Grid>
    </DataTemplate>
  </UserControl.Resources>

  <Grid Grid.Row="2">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="10"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <GroupBox Grid.Row="0" Header="Filter" BorderBrush="#FF6D5B4B">
      <StackPanel Orientation="Horizontal" Margin="5">
        <Grid Width="200" Margin="0,0,5,0">
          <Grid.RowDefinitions>
            <RowDefinition Height="18"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
            <RowDefinition Height="18"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
          </Grid.RowDefinitions>
          <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=Rarities, Converter={StaticResource Description}, ConverterParameter=1001}" Margin="0,0,5,0"></TextBlock>
          <ComboBox x:Name="ComboBoxRarities" Grid.Row="1" Height="22" ItemsSource="{Binding Path=Rarities}" SelectionChanged="ComboBoxRarities_OnSelectionChanged"></ComboBox>
          <TextBlock Grid.Row="2" VerticalAlignment="Center" Text="{Binding Path=Rarities, Converter={StaticResource Description}, ConverterParameter=1004}" Margin="0,0,5,0"></TextBlock>
          <TextBox Grid.Row="3" Text="{Binding Path=SearchText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </Grid>
        <Grid Width="200" Margin="5,0">
          <Grid.RowDefinitions>
            <RowDefinition Height="18"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
          </Grid.RowDefinitions>
          <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=ItemTypes, Converter={StaticResource Description}, ConverterParameter=1002}" Margin="0,0,5,0"></TextBlock>
          <ComboBox x:Name="ComboBoxTypes" Grid.Row="1" Height="22" ItemsSource="{Binding Path=ItemTypes}" SelectionChanged="ComboBoxTypes_OnSelectionChanged" Margin="0"></ComboBox>
        </Grid>
        <Grid Width="300" Margin="5,0">
          <Grid.RowDefinitions>
            <RowDefinition Height="18"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
          </Grid.RowDefinitions>
          <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=Targets, Converter={StaticResource Description}, ConverterParameter=1003}" Margin="0,0,5,0"></TextBlock>
          <ComboBox x:Name="ComboBoxTargets" Grid.Row="1" Height="22" ItemsSource="{Binding Path=Targets}" SelectionChanged="ComboBoxTargets_OnSelectionChanged"></ComboBox>
        </Grid>
      </StackPanel>
    </GroupBox>
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="10"></ColumnDefinition>
        <ColumnDefinition Width="350"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="0">
        <ListBox x:Name="ListBoxItems" Background="Transparent" ItemsSource="{Binding Path=Items}" SelectedItem="{Binding Path=SelectedAsset}" 
                 SelectionChanged="ListBoxItems_OnSelectionChanged" BorderBrush="#FF6D5B4B" HorizontalContentAlignment="Stretch">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Grid MaxHeight="24" ToolTip="{Binding Path=Toolip}">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="30"></ColumnDefinition>
                  <ColumnDefinition Width="*"></ColumnDefinition>
                  <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="{Binding Path=Icon.Filename}" HorizontalAlignment="Left"></Image>
                <TextBlock Grid.Column="1" Text="{Binding Path=Text, Converter={StaticResource DescriptionConverter}}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"></TextBlock>
                <TextBlock Grid.Column="2" Text="{Binding Path=Text.ID}" VerticalAlignment="Center" FontSize="11" HorizontalAlignment="Right"></TextBlock>
              </Grid>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </Grid>
      <Border Grid.Column="2" BorderBrush="#FFFFE4AD" BorderThickness="1" CornerRadius="5" Background="{Binding Path=RarityBrush}">
        <StackPanel Margin="10">
          <!--Name-->
          <StackPanel Visibility="{Binding Path=HasResult, Converter={StaticResource BooleanToVisibility}}">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
              </Grid.ColumnDefinitions>
              <Image Grid.Column="0" Source="{Binding Path=SelectedAsset.Icon.Filename}" Width="75" Height="75" HorizontalAlignment="Left"></Image>
              <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"></RowDefinition>
                  <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding Path=SelectedAsset.Text, Converter={StaticResource DescriptionConverter}}" FontWeight="Bold" FontSize="16" Foreground="#FFFFE4AD" TextWrapping="Wrap"></TextBlock>
                <TextBlock Grid.Row="1" Text="{Binding Path=SelectedAsset.Rarity, Converter={StaticResource DescriptionConverter}}" Foreground="#FFA49370"></TextBlock>
              </Grid>
            </Grid>
            <Border BorderBrush="#FFA49370" BorderThickness="1" Height="0.5" Margin="0,5" Visibility="{Binding Path=HasResult, Converter={StaticResource BooleanToVisibility}}"></Border>
          </StackPanel>
          <!--Allocation-->
          <StackPanel Orientation="Horizontal" Visibility="{Binding Path=HasResult, Converter={StaticResource BooleanToVisibility}}">
            <Image Source="{Binding Path=SelectedAsset.Allocation.Icon.Filename}" Height="25" Width="25" Margin="0,0,10,0"></Image>
            <TextBlock VerticalAlignment="Center" Text="{Binding Path=AllocationText}" Foreground="#FFFFE4AD" Margin="0,0,10,0"></TextBlock>
            <TextBlock VerticalAlignment="Center" Text="{Binding Path=SelectedAsset.Allocation.Text, Converter={StaticResource DescriptionConverter}}" Foreground="#FFDEAF04" FontWeight="Bold"></TextBlock>
          </StackPanel>
          <Border BorderBrush="#FFA49370" BorderThickness="1" Height="0.5" Margin="0,5" Visibility="{Binding Path=HasResult, Converter={StaticResource BooleanToVisibility}}"></Border>
          <TextBlock VerticalAlignment="Center" Text="{Binding Path=SelectedAsset.EffectTargetInfo, Converter={StaticResource DescriptionConverter}}" Margin="0,0,14,10" Foreground="#FFA49370" TextWrapping="Wrap"></TextBlock>
          <!--FactoryUpgrade-->
          <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.FactoryUpgrades, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Path=SelectedAsset.FactoryUpgrades}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
          </Grid>
          <!--BuildingUpgrade-->
          <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.BuildingUpgrades, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Path=SelectedAsset.BuildingUpgrades}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
          </Grid>
          <!--CultureUpgrade-->
          <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.CultureUpgrades, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Path=SelectedAsset.CultureUpgrades}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
          </Grid>
          <!--ModuleOwnerUpgrade-->
          <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.ModuleOwnerUpgrades, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Path=SelectedAsset.ModuleOwnerUpgrades}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
          </Grid>
          <!--ResidenceUpgrades-->
          <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.ResidenceUpgrades, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Path=SelectedAsset.ResidenceUpgrades}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
          </Grid>
          <!--PopulationUpgrades-->
          <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.PopulationUpgrades, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Path=SelectedAsset.PopulationUpgrades}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
          </Grid>
          <!--ElectricUpgrades-->
          <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.ElectricUpgrades, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Path=SelectedAsset.ElectricUpgrades}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
          </Grid>
          <!--AttackableUpgrades-->
          <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.AttackableUpgrades, Converter={StaticResource VisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Path=SelectedAsset.AttackableUpgrades}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
          </Grid>
          <!--Expedition-->
          <StackPanel Visibility="{Binding Path=HasResult, Converter={StaticResource BooleanToVisibility}}">
            <Border BorderBrush="#FFA49370" BorderThickness="1" Height="0.5" Margin="0,5" Visibility="{Binding Path=SelectedAsset.ExpeditionAttributes, Converter={StaticResource VisibilityConverter}}"></Border>
            <TextBlock VerticalAlignment="Center" Foreground="#FFA49370" Text="{Binding Path=ExpeditionText}" Visibility="{Binding Path=SelectedAsset.ExpeditionAttributes, Converter={StaticResource VisibilityConverter}}" Margin="0,2,0,10"></TextBlock>
            <Grid Margin="0,2" Visibility="{Binding Path=SelectedAsset.ExpeditionAttributes, Converter={StaticResource VisibilityConverter}}">
              <ItemsControl ItemsSource="{Binding Path=SelectedAsset.ExpeditionAttributes}" ItemTemplate="{StaticResource UpgradeTemplate}"/>
            </Grid>
          </StackPanel>
          <!--Trade-->
          <StackPanel Visibility="{Binding Path=HasResult, Converter={StaticResource BooleanToVisibility}}">
            <Border BorderBrush="#FFA49370" BorderThickness="1" Height="0.5" Margin="0,5" Visibility="{Binding Path=SelectedAsset.TradePrice, Converter={StaticResource VisibilityConverter}}"></Border>
            <Grid Visibility="{Binding Path=SelectedAsset.TradePrice, Converter={StaticResource VisibilityConverter}}">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
              </Grid.ColumnDefinitions>
              <Image Grid.Column="0" Source="../Resources/data/ui/2kimages/main/icons/icon_credits.png" Height="22" Width="22" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
              <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding Path=TradeText}" Foreground="#FFFFE4AD"></TextBlock>
              <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding Path=SelectedAsset.TradePrice}" Foreground="#FFFFE4AD"></TextBlock>
            </Grid>
          </StackPanel>
          <!--Info-->
          <StackPanel Visibility="{Binding Path=HasResult, Converter={StaticResource BooleanToVisibility}}">
            <Border BorderBrush="#FFA49370" BorderThickness="1" Height="0.5" Margin="0,5"></Border>
            <TextBlock Text="{Binding Path=SelectedAsset.Info, Converter={StaticResource DescriptionConverter}, ConverterParameter=Long}" Foreground="#FFA49370" FontStyle="Italic" TextWrapping="Wrap"></TextBlock>
          </StackPanel>
        </StackPanel>
      </Border>

    </Grid>
  </Grid>

</UserControl>
