<UserControl x:Class="AssetViewer.Controls.GuildhouseItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssetViewer.Controls"
             xmlns:assetViewer="clr-namespace:AssetViewer"
             xmlns:converter="clr-namespace:AssetViewer.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White" Loaded="GuildhouseItem_OnLoaded">

  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibility"></BooleanToVisibilityConverter>
    <converter:GlobalDescriptionConverter x:Key="Description"></converter:GlobalDescriptionConverter>
  </UserControl.Resources>

  <Grid Grid.Row="2">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="10"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    <GroupBox Grid.Row="0" Header="Filter">
      <StackPanel Orientation="Horizontal" Margin="5">
        <Grid Margin="0,0,50,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="250"></ColumnDefinition>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
          </Grid.RowDefinitions>
          <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1001}" Margin="0,0,5,0"></TextBlock>
          <ComboBox x:Name="ComboBoxAllocations" Grid.Column="1" Grid.Row="0" Height="22" ItemsSource="{Binding Path=Allocations}" SelectionChanged="ComboBoxAllocations_OnSelectionChanged"></ComboBox>
          <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Text="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1002}" Margin="0,0,5,0"></TextBlock>
          <ComboBox x:Name="ComboBoxTypes" Grid.Column="1" Grid.Row="1" Height="22" SelectionChanged="ComboBoxTypes_OnSelectionChanged">
            <TextBlock Text="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1021}"></TextBlock>
            <TextBlock Text="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1022}"></TextBlock>
          </ComboBox>
          <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Text="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1003}" Margin="0,0,5,0"></TextBlock>
          <ComboBox x:Name="ComboBoxTargets" Grid.Column="1" Grid.Row="2" Height="22" ItemsSource="{Binding Path=Targets}" SelectionChanged="ComboBoxTargets_OnSelectionChanged"></ComboBox>
        </Grid>
        <Grid Grid.Column="2">
          <Grid.RowDefinitions>
            <RowDefinition Height="22"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
          </Grid.ColumnDefinitions>
          <CheckBox x:Name="CheckBoxFactoryUpgrades" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1011}" Checked="CheckBoxFactoryUpgrades_OnChanged" Unchecked="CheckBoxFactoryUpgrades_OnChanged"></CheckBox>
          <CheckBox x:Name="CheckBoxBuildingUpgrades" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Content="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1012}" Checked="CheckBoxBuildingUpgrades_OnChanged" Unchecked="CheckBoxBuildingUpgrades_OnChanged"></CheckBox>
          <CheckBox x:Name="CheckBoxPopulationUpgrade" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1046}" Checked="CheckBoxPopulationUpgrade_OnChanged" Unchecked="CheckBoxPopulationUpgrade_OnChanged"></CheckBox>
          <CheckBox x:Name="CheckBoxResidenceUpgrade" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Content="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1047}" Checked="CheckBoxResidenceUpgrade_OnChanged" Unchecked="CheckBoxResidenceUpgrade_OnChanged"></CheckBox>
        </Grid>
        <Grid Grid.Column="4">
          <Grid.RowDefinitions>
            <RowDefinition Height="22"></RowDefinition>
            <RowDefinition Height="22"></RowDefinition>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
          </Grid.ColumnDefinitions>
        </Grid>
      </StackPanel>
    </GroupBox>
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="300"></ColumnDefinition>
        <ColumnDefinition Width="10"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Grid Grid.Column="0">
        <ListBox x:Name="ListBoxItems" ItemsSource="{Binding Path=Items, Mode=OneWay}" SelectedItem="{Binding Path=SelectedItem}" SelectionChanged="ListBoxItems_OnSelectionChanged"></ListBox>
      </Grid>
      <Border Grid.Column="2" BorderThickness="1" BorderBrush="#FFABADB3">
        <StackPanel Margin="5" Visibility="{Binding Path=HasResult, Converter={StaticResource BooleanToVisibility}}">
          <!--Rarity-->
          <StackPanel Margin="0,2" Orientation="Horizontal">
            <TextBlock Margin="0,0,5,0" FontWeight="Bold" Text="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1023}"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.Rarity}"></TextBlock>
          </StackPanel>
          <!--Effect Targets-->
          <StackPanel Margin="0,2" Orientation="Horizontal">
            <TextBlock Margin="0,0,5,0" FontWeight="Bold" Text="{Binding Path=Descriptions, Converter={StaticResource Description}, ConverterParameter=1024}"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.EffectTarget}"></TextBlock>
          </StackPanel>
          <!--Factory Upgrades-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasFactoryUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.FactoryUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.FactoryUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--BuildingUpgrade-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasBuildingUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.BuildingUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.BuildingUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--IncidentInfectableUpgrade-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasIncidentInfectableUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.IncidentInfectableUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.IncidentInfectableUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--ElectricUpgrade-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasElectricUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.ElectricUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.ElectricUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--CultureUpgrade-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasCultureUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.CultureUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.CultureUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--ModuleOwnerUpgrade-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasModuleOwnerUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.ModuleOwnerUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.ModuleOwnerUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--IncidentInfluencerUpgrade-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasIncidentInfluencerUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.IncidentInfluencerUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.IncidentInfluencerUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--ResidenceUpgrade-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasResidenceUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.ResidenceUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.ResidenceUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--PopulationUpgrade-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasPopulationUpgrade, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.PopulationUpgrade.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.PopulationUpgrade.Content}"></TextBlock>
          </StackPanel>
          <!--ExpeditionAttribute-->
          <StackPanel Margin="0,2,0,2" Visibility="{Binding Path=SelectedItem.HasExpeditionAttribute, Converter={StaticResource BooleanToVisibility}}">
            <TextBlock Text="{Binding Path=SelectedItem.ExpeditionAttribute.Name}" Margin="0,0,5,0" FontWeight="Bold"></TextBlock>
            <TextBlock Text="{Binding Path=SelectedItem.ExpeditionAttribute.Content}"></TextBlock>
          </StackPanel>
          <!--Description-->
          <TextBlock Margin="0,10,0,2" Text="{Binding Path=SelectedItem.Description.Long}" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
      </Border>
    </Grid>
  </Grid>

</UserControl>
