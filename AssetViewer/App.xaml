<Application
  x:Class="AssetViewer.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:data="clr-namespace:AssetViewer.Data"
  xmlns:local="clr-namespace:AssetViewer"
  StartupUri="MainWindow.xaml">
  <Application.Resources>
    <DataTemplate DataType="{x:Type data:Description}">
      <Grid SnapsToDevicePixels="True">
        <TextBlock Foreground="#FFFFE4AD" Margin="0 1 0 1"  Text="{Binding CurrentLang}"  local:TextBlockExtensions.DescFontStyle="{Binding FontStyle}" TextWrapping="Wrap" />
      </Grid>
    </DataTemplate>
  </Application.Resources>
</Application>
